#!/bin/sh -x
#	$OpenBSD: src/distrib/sets/checkflist,v 1.4 2001/12/25 01:30:22 deraadt Exp $

if [ "X${DESTDIR}" = "X" ]; then
	echo DESTDIR must be set
	exit 1
fi

TMP=`mktemp /tmp/_ckr.XXXXXX` || exit 1
trap 'rm -f $TMP' 0 1 15

sh makeflist > $TMP
( cd $DESTDIR ; find . \( -type d -o -type f -o -type l \) ) | sort | \
    diff $TMP -
