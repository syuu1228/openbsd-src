#!/bin/csh -f
#	$OpenBSD: src/distrib/sets/checkflist,v 1.3 2000/03/01 22:10:08 todd Exp $


if (! $?DESTDIR) then
	echo DESTDIR must be set
	exit 1
endif

set fsdir=$DESTDIR

csh makeflist >! /tmp/_CHECK.$$
( cd $fsdir ; find . \( -type d -o -type f -o -type l \) ) | sort | \
    diff /tmp/_CHECK.$$ -
/bin/rm -f /tmp/_CHECK.$$
